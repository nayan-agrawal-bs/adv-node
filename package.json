{
  "name": "@bigstep-workspace/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "reset": "nx reset",
    "build": "nx run-many --targets=build",
    "lint": "nx run-many --targets=lint --parallel=true",
    "format": "nx run-many --targets=format --parallel=true",
    "codegen": "nx run-many --targets=codegen",
    "format:check": "nx run-many --targets=format:check --parallel=true",
    "type-check": "nx run-many --target type-check --parallel=false",
    "update": "nx migrate latest",
    "dep-graph": "nx dep-graph",
    "start": "yarn codegen && concurrently \"yarn start:server\" \"yarn start:web\"",
    "start:server": "nx serve server",
    "start:server:dev": "nx serve server",
    "start:web": "nx serve web",
    "start:web:static": "nx serve-static web",
    "start:web:dev": "NX_PUBLIC_API_URL=https://staging.bigstep.com nx serve web",
    "start:web:static:dev": "NX_PUBLIC_API_URL=https://staging.bigstep.com nx serve-static web",
    "build:server": "nx build server",
    "build:web:dev": "NX_PUBLIC_API_URL=https://staging.bigstep.com nx build web",
    "build:web": "nx build web",
    "clean": "rimraf .nx && rimraf tmp && rimraf dist && rimraf packages/**/node_modules && rimraf libs/**/node_modules && rimraf packages-lock.json",
    "precommit": "lint-staged",
    "prestart": "nx run-many --targets=codegen",
    "postinstall": "yarn codegen",
    "prepare": "husky"
  },
  "private": true,
  "packageManager": "yarn@1.22.19",
